    <data>
        <!-- Enhanced Homepage Tree View with Project Details Button -->
        <record id="view_gantt_task_homepage_tree" model="ir.ui.view">
            <field name="name">gantt.task.homepage.tree</field>
            <field name="model">gantt.task</field>
            <field name="arch" type="xml">
                <tree string="Top-Level Projects" create="true" editable="bottom">
                    <field name="wbs"/>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="lead"/>
                    <field name="duration" string="Duration (Days)" class="text-left"/>
                    <field name="overall_progress" widget="progressbar" class="text-left"/>
                    <field name="priority"/>
                    <button name="open_project_details"
                            string="Project Details"
                            type="object"
                            class="btn-info"
                            icon="fa-info-circle"
                            help="View complete project details, tasks, and statistics"/>
                    <button name="open_gantt_chart"
                            string="Open Gantt"
                            type="object"
                            class="btn-primary"
                            icon="fa-bar-chart"
                            help="Open Gantt chart view for this project"/>
                </tree>
            </field>
        </record>


