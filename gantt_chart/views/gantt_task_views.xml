        <record id="view_gantt_task_form" model="ir.ui.view">
            <field name="name">gantt.task.form</field>
            <field name="model">gantt.task</field>
            <field name="arch" type="xml">
                <form string="Project Task">
                    <header>
                        <button name="open_project_details"
                                type="object"
                                string="Project Details"
                                class="btn-info"
                                icon="fa-info-circle"
                                help="View complete project overview"/>
                        <button name="open_gantt_chart"
                                type="object"
                                string="Open Project Gantt"
                                class="btn-primary"
                                icon="fa-bar-chart"/>
                        <field name="priority" widget="priority"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_gantt"
                                    type="object"
                                    string="View in Gantt"
                                    class="oe_stat_button"
                                    icon="fa-tasks"/>
                        </div>

                        <group>
                            <group name="basic_info">
                                <field name="wbs" required="1"/>
                                <field name="name" required="1"/>
                                <field name="lead"/>
                                <field name="is_delayed" invisible="1"/>
                            </group>
                            <group name="schedule">
                                <field name="start_date" required="1"/>
                                <field name="end_date" required="1"/>
                                <field name="duration" readonly="1"/>
                                <field name="progress"/>
                            </group>
                        </group>

                        <group>
                            <group name="styling">
<!--                                <field name="color" widget="color"/>-->
<!--                                <field name="dependencies" placeholder="e.g., 1,2,3"/>-->
                            </group>
                        </group>

                        <notebook>
                            <page string="Description" name="description">
                                <field name="description" placeholder="Task description and notes..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search view for better filtering -->
        <record id="view_gantt_task_search" model="ir.ui.view">
            <field name="name">gantt.task.search</field>
            <field name="model">gantt.task</field>
            <field name="arch" type="xml">
                <search string="Search Tasks">
                    <field name="name" string="Task Name"/>
                    <field name="wbs" string="WBS Code"/>
                    <field name="lead" string="Assignee"/>

                    <filter name="my_tasks" string="My Tasks"
                            domain="[('lead', '=', uid)]"/>
                    <filter name="delayed_tasks" string="Delayed Tasks"
                            domain="[('is_delayed', '=', True)]"/>
                    <filter name="in_progress" string="In Progress"
                            domain="[('progress', '&gt;', 0), ('progress', '&lt;', 100)]"/>
                    <filter name="completed" string="Completed"
                            domain="[('progress', '=', 100)]"/>

                    <separator/>
                    <filter name="high_priority" string="High Priority"
                            domain="[('priority', 'in', ['high', 'urgent'])]"/>
                    <filter name="this_month" string="This Month"
                            domain="[('start_date', '&gt;=', (context_today).strftime('%Y-%m-01')),
                                     ('start_date', '&lt;', (context_today + relativedelta(months=1)).strftime('%Y-%m-01'))]"/>

                    <group expand="0" string="Group By">
                        <filter name="group_by_project" string="Project"
                                context="{'group_by': 'wbs'}"/>
                        <filter name="group_by_priority" string="Priority"
                                context="{'group_by': 'priority'}"/>
                        <filter name="group_by_lead" string="Assignee"
                                context="{'group_by': 'lead'}"/>
                        <filter name="group_by_month" string="Start Month"
                                context="{'group_by': 'start_date:month'}"/>
                    </group>
                </search>
            </field>
        </record>

