        <!-- Kanban view for tasks (optional) -->
        <record id="view_gantt_task_kanban" model="ir.ui.view">
            <field name="name">gantt.task.kanban</field>
            <field name="model">gantt.task</field>
            <field name="arch" type="xml">
                <kanban default_group_by="priority" class="o_kanban_small_column">
                    <field name="wbs"/>
                    <field name="name"/>
                    <field name="progress"/>
                    <field name="priority"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="is_delayed"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="wbs"/>: <field name="name"/>
                                        </strong>
                                    </div>
                                    <div class="o_kanban_record_subtitle text-muted">
                                        <i class="fa fa-clock-o" title="Duration"/>
                                        <field name="start_date"/> - <field name="end_date"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="progress">
                                        <div class="progress-bar"
                                             t-att-style="'width: ' + record.progress.raw_value + '%'"/>
                                    </div>
                                    <div class="text-right">
                                        <small><field name="progress"/>% Complete</small>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="lead" widget="many2one_avatar_user"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <t t-if="record.is_delayed.raw_value">
                                            <span class="badge badge-danger">Delayed</span>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

    </data>
