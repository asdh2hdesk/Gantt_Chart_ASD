<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Project Details Wizard Form -->
        <record id="view_project_details_wizard_form" model="ir.ui.view">
            <field name="name">project.details.wizard.form</field>
            <field name="model">project.details.wizard</field>
            <field name="arch" type="xml">
                <form string="Project Details">
                    <header>
                        <button name="action_open_gantt"
                                string="Open Gantt Chart"
                                type="object"
                                class="btn-secondary"
                                icon="fa-bar-chart"/>
                        <button name="action_refresh"
                                string="Refresh"
                                type="object"
                                class="btn-secondary"
                                icon="fa-refresh"/>
<!--                        <button name="action_create_task"-->
<!--                                string="Add New Task"-->
<!--                                type="object"-->
<!--                                class="btn-primary"-->
<!--                                icon="fa-plus"/>-->
                    </header>
                    <sheet>
                        <!-- Hidden project_id field for context -->
                        <field name="project_id" invisible="1"/>

                        <!-- Project Summary Card -->
                        <div class="oe_title">
                            <h3>
                                Project: <field name="wbs_root" readonly="1" class="oe_inline"/>
                            </h3>
                        </div>

                        <!-- Project Statistics -->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="panel panel-info">
                                            <div class="panel-body text-center">
                                                <h3><field name="total_tasks" readonly="1"/></h3>
                                                <p>Total Tasks</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="panel panel-success">
                                            <div class="panel-body text-center">
                                                <h3><field name="completed_tasks" readonly="1"/></h3>
                                                <p>Completed</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="panel panel-warning">
                                            <div class="panel-body text-center">
                                                <h3><field name="in_progress_tasks" readonly="1"/></h3>
                                                <p>In Progress</p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="panel panel-danger">
                                            <div class="panel-body text-center">
                                                <h3><field name="delayed_tasks" readonly="1"/></h3>
                                                <p>Delayed</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Project Timeline -->
                        <group string="Project Timeline">
                            <group>
                                <field name="project_start_date" readonly="1"/>
                                <field name="project_end_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="project_duration" readonly="1" string="Duration (Days)"/>
                            </group>
                        </group>

                        <!-- Task Management -->
                        <notebook>
                            <!-- Editable Task Lines - Make this the first tab -->
                            <page string="All Tasks" name="edit_tasks">
                                <field name="task_line_ids"
                                       widget="one2many"
                                       context="{'default_wizard_id': active_id, 'default_project_id': project_id}">
                                    <tree string="Project Tasks"
                                          editable="bottom"
                                          create="true"
                                          delete="true"
                                          decoration-success="progress == 100"
                                          decoration-warning="progress &gt; 0 and progress &lt; 100"
                                        <field name="wbs" string="S. no."/>
                                        <field name="name" required="1"/>
                                        <field name="lead"/>
                                        <field name="start_date" required="1"/>
                                        <field name="end_date" required="1"/>
                                        <field name="duration" readonly="1"/>
                                        <field name="progress"/>
                                        <field name="is_delayed" invisible="1"/>
                                        <field name="original_task_id" invisible="1"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Completed Tasks" name="completed_tasks">
                                <field name="completed_task_ids" readonly="1">
                                    <tree string="Completed Tasks">
                                        <field name="wbs"/>
                                        <field name="name"/>
                                        <field name="lead"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="duration"/>
                                        <field name="progress" widget="progressbar"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Delayed Tasks" name="delayed_tasks">
                                <field name="delayed_task_ids" readonly="1">
                                    <tree string="Delayed Tasks" decoration-danger="is_delayed">
                                        <field name="wbs"/>
                                        <field name="name"/>
                                        <field name="lead"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="duration"/>
                                        <field name="progress" widget="progressbar"/>
                                        <field name="is_delayed" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <footer>
                        <button name="action_save_and_close"
                                string="Save &amp; Close"
                                type="object"
                                class="btn-primary"/>
                        <button string="Cancel"
                                class="btn-secondary"
                                special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Wizard Action -->
        <record id="action_project_details_wizard" model="ir.actions.act_window">
            <field name="name">Project Details</field>
            <field name="res_model">project.details.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_project_details_wizard_form"/>
            <field name="target">new</field>
        </record>

        <!-- Optional: Separate tree view for task lines -->
        <record id="view_project_task_line_tree" model="ir.ui.view">
            <field name="name">project.task.line.tree</field>
            <field name="model">project.task.line</field>
            <field name="arch" type="xml">
                <tree string="Task Lines" editable="bottom" create="true" delete="true">
                    <field name="wbs" required="1"/>
                    <field name="name" required="1"/>
                    <field name="lead"/>
                    <field name="start_date" required="1"/>
                    <field name="end_date" required="1"/>
                    <field name="duration" readonly="1"/>
                    <field name="progress"/>
                    <field name="dependencies"/>
                    <field name="is_delayed" invisible="1"/>
                    <field name="original_task_id" invisible="1"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>